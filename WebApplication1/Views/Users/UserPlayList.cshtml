
@using WebApplication1.Models

@model (PlayList,IQueryable<Tracks>)


@{
    ViewData["Title"] = $"{@Model.Item1.Author} : {@Model.Item1.Name}";
}


<form method="post" class="delete">
    <a asp-controller="Users" asp-action="DeletePlayList" asp-route-playlistId="@Model.Item1.Id">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
        </svg>
    </a>
</form>

<div class="container paddingtop">

    <div class="container marginibottom">
        <h4>@Model.Item1.Name</h4>
    </div>

    <div class="paddingtop">
        @foreach(var track in @Model.Item2)
        {
            <div class="grid-list container">
                <p>@track.TrackName</p>
                <form method="post" class="saved">
                    <a asp-controller="Users" asp-action="DeleteFromPlaylist" asp-route-trackId="@track.TrackId" asp-route-playlistId="@Model.Item1.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                        </svg>
                    </a>
                </form>
            </div>
        }
    </div>
</div>

